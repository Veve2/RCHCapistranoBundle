{
    "name": "chalasdev/capistrano-bundle",
    "description": "Symfony/console command that provide automation of your deployment workflow on top of Capistrano.",
    "keywords": ["deploy", "bundle", "symfony2", "capistrano", "capifony", "production", "workflow"],
    "type": "symfony-bundle",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Robin CHALAS",
            "email": "robin.chalas@gmail.com",
            "homepage": "https://github.com/chalasr"
        }
    ],
    "require": {
        "php": "> 5.4",
        "symfony/console": ">=2.7",
        "symfony/filesystem": ">=2.7",
        "symfony/yaml": "^3.0"
    },
    "autoload":     {
        "psr-0": { "Chalasdev\\CapistranoBundle": "" }
    },
    "target-dir": "Chalasdev/CapistranoBundle",
    "require-dev": {
        "fabpot/php-cs-fixer": "^1.11"
    }
}
