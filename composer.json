{
    "name": "rc/capistrano-bundle",
    "description": "Symfony/console command that provide automation of your deployment workflow on top of Capistrano.",
    "keywords": ["deploy", "bundle", "symfony2", "capistrano", "capifony", "production", "workflow"],
    "type": "symfony-bundle",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Robin CHALAS",
            "email": "robin.chalas@gmail.com",
            "homepage": "https://github.com/chalasr/CapistranoBundle"
        }
    ],
    "require": {
        "php": "> 5.4",
        "symfony/console": ">=2.5",
        "symfony/filesystem": ">=2.5",
        "symfony/yaml": ">=2.5"
    },
    "autoload":     {
        "psr-0": { "RC\\CapistranoBundle": "" }
    },
    "target-dir": "RC/CapistranoBundle",
    "require-dev": {
        "fabpot/php-cs-fixer": "^1.11"
    }
}
